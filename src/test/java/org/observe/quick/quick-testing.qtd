<?xml version="1.0" encoding="UTF-8"?>

<qonfig-def name="Quick-Testing" version="0.1" extends:expresso="Expresso-Testing v0.1" extends:quick="Quick-Core v0.1">
	<add-ons>
		<!-- This add-on doesn't do anything to the schema (no attributes or children), but is needed for tagging in the implementation -->
		<add-on name="quick-test-container" requires="container" />
		<add-on name="quick-test" requires="test">
			<child-def name="body" type="container" inherits="quick-test-container" max="inf" />
		</add-on>
	</add-ons>

	<auto-inheritance>
		<auto-inherit inherits="quick-test">
			<target element="test" />
		</auto-inherit>
		<auto-inherit inherits="quick-test-container">
			<target element="container" role="quick-test-container.content" />
		</auto-inherit>
	</auto-inheritance>
</qonfig-def>
